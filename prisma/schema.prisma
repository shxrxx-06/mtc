generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model IMAS {
  id      String   @id @default(uuid())
  ICODE   String
  NICODE  String?
  GROUP   String?
  DESC1   String
  DESC2   String?
  DESC3   String?
  UOM     String
  OUOM    String
  ASRTUNO String?
  PARTNO  String?
  CALPUR  String?
  MAXSTK  Decimal?
  MINSTK  Decimal?
  ABC     String?
  VED     String?
  FMS     String?
  REORD   Int?
  VITAL   String?
  AFOL    String?
  FOL     String
  TYPE    String?
  HSN     String?

  createdDate DateTime @default(now())
  updatedDate DateTime @updatedAt

  enquiries Enquiry[]
}

model Enquiry {
  id        String @id @default(uuid())
  entryDate String
  dueDate   String
  dueTime   String
  IMAS      IMAS   @relation(fields: [iMASId], references: [id])
  iMASId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
